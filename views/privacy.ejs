  }
  .privacy-container {
    max-width: 40vw;
    margin: 0 auto;
    padding: 2rem;
    background-color: #fff;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    margin-top: 40px;
    margin-bottom: 40px;
    overflow: hidden;
  }
  h1 {
    color: #333;
    margin-bottom: 20px;
    text-align: center;
  }
  h2 {
    color: #333;
    margin-bottom: 10px;
  }
  p {
    line-height: 1.6;
    margin-bottom: 10px;
  }
  ul {
    padding-left: 20px;
  }
  .privacyul > li {
    margin-left: 2rem;
  }
